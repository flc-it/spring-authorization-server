<configuration debug="false">
    <!-- To get colored logs in standard output -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml" />

    <!-- Inject Spring properties -->
    <springProperty scope="context" name="server.hostname" source="info.server.hostname"/>
    <springProperty scope="context" name="server.port" source="info.server.port"/>
    <springProperty scope="context" name="server.environment" source="info.server.environment"/>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>./logs/${server.hostname}_${server.environment}_${project.parent.artifactId}_${server.port}_springboot.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>./logs/${server.hostname}_${server.environment}_${project.parent.artifactId}_${server.port}_%d{yyyy-MM-dd}_springboot.log.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%d %-5level [%thread] %class \(%file:%line\) - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%clr(%d %-5level [%thread] %class \(%file:%line\) - %msg%n)</pattern>
        </encoder>
    </appender>

    <logger name="org.flcit" level="INFO"/>
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.hibernate" level="INFO"/>
    <logger name="org.xnio" level="INFO"/>
    <logger name="io.undertow" level="INFO"/>
    <logger name="org.apache" level="INFO"/>

    <root level="WARN">
        <appender-ref ref="FILE" />
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>
