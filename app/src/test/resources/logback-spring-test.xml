<configuration debug="true">
    <!-- To get colored logs in standard output -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml" />

    <!-- Inject Spring properties -->
    <springProperty scope="context" name="server.name" source="info.server.hostname"/>
    <springProperty scope="context" name="server.port" source="info.server.port"/>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>./logs-test/${project.parent.artifactId}_${server.name}_${server.port}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>./logs-test/${project.parent.artifactId}_${server.name}_${server.port}_%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%d %-5level [%thread] %class [%method:%line] - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%clr(%d %-5level [%thread] %class \(%file:%line\) - %msg%n)</pattern>
        </encoder>
    </appender>

    <logger name="org.flcit" level="INFO"/>
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.hibernate" level="INFO"/>
    <logger name="org.xnio" level="INFO"/>
    <logger name="io.undertow" level="INFO"/>
    <logger name="org.apache" level="INFO"/>

    <root level="DEBUG">
        <appender-ref ref="FILE" />
        <appender-ref ref="CONSOLE" />
    </root>

    <jmxConfigurator />
</configuration>
